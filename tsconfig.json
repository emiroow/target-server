{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": { "src/*": ["src/*"] },
    "resolveJsonModule": true,
    "rootDir": "./src",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "skipLibCheck": true
  },
  "typeRoots": ["./node_modules/@types", "./src/types"],
  "include": ["src/**/*", "src"],
  "ts-node": {
    "swc": false
  }
}
